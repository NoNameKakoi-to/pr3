<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="325" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF726BEB">
        <Label Content="Выберите количество игроков" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,42,0,0" FontSize="14" Height="30"/>
        <TextBox Name="count" Height="20" Width="206" Background="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,77,0,0"/>
        <Button x:Name="start" Content="Старт" Height="20" Background="White" HorizontalAlignment="Center" VerticalAlignment="Top" Click="start_Click" Width="206" Margin="0,102,0,0" BorderBrush="White" RenderTransformOrigin="0.274,0.495" Foreground="#FF524ADA" FontWeight="Bold"/>
        <Label Content=" __( .__.  )_" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="16" Height="32" Width="72" FontWeight="Bold"/>
    </Grid>
</Window>
